<?xml version="1.0" encoding="UTF-8" ?>
<?xaml-comp compile="true" ?>
<ResourceDictionary 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <!-- Primary palette (Pantone 2025 - Mocha Mousse) -->
    <Color x:Key="Primary">#A47764</Color>
    <Color x:Key="PrimaryDark">#7A564A</Color>
    <Color x:Key="PrimaryDarkText">#2B1F1B</Color>
    <Color x:Key="Secondary">#EADDD6</Color>
    <Color x:Key="SecondaryDarkText">#5C3F36</Color>
    <Color x:Key="Tertiary">#D6A77A</Color>

    <!-- Surface and contrast layers -->
    <Color x:Key="Surface">#FFFFFF</Color>
    <Color x:Key="SurfaceDark">#1F1F1F</Color>
    <Color x:Key="OnPrimary">#FFFFFF</Color>
    <Color x:Key="OnSecondary">#2B1F1B</Color>
    <Color x:Key="OnSurface">#1F1F1F</Color>
    <Color x:Key="OnSurfaceDark">#BBBBBB</Color>
    <Color x:Key="OnBackground">#1F1F1F</Color>

    <!-- Neutrals -->
    <Color x:Key="White">#FFFFFF</Color>
    <Color x:Key="Black">#000000</Color>
    <Color x:Key="OffBlack">#1F1F1F</Color>
    <Color x:Key="Magenta">#D600AA</Color>
    <Color x:Key="MidnightBlue">#190649</Color>

    <!-- Grayscale -->
    <Color x:Key="Gray100">#E1E1E1</Color>
    <Color x:Key="Gray200">#C8C8C8</Color>
    <Color x:Key="Gray300">#ACACAC</Color>
    <Color x:Key="Gray400">#919191</Color>
    <Color x:Key="Gray500">#6E6E6E</Color>
    <Color x:Key="Gray600">#404040</Color>
    <Color x:Key="Gray900">#212121</Color>
    <Color x:Key="Gray950">#141414</Color>

    <!-- Status colors -->
    <Color x:Key="ErrorColor">#D32F2F</Color>
    <Color x:Key="SuccessColor">#388E3C</Color>
    <Color x:Key="WarningColor">#FBC02D</Color>
    <Color x:Key="InfoColor">#1976D2</Color>

    <!-- Disabled state -->
    <Color x:Key="DisabledBackground">#CCCCCC</Color>
    <Color x:Key="DisabledText">#888888</Color>
    <Color x:Key="DisabledBorder">#BBBBBB</Color>

    <!-- Borders and dividers -->
    <Color x:Key="BorderColor">#D0B8AE</Color>
    <Color x:Key="DividerColor">#E0E0E0</Color>

    <!-- Shadow -->
    <Color x:Key="ShadowColor">#444444</Color>

    <!-- ✅ BUTTON GRADIENT COLORS - Centralized -->
    <!-- Primary Gradient (Mocha Mousse variants) -->
    <Color x:Key="PrimaryGradientStart">#B8876F</Color>
    <Color x:Key="PrimaryGradientMiddle">#A47764</Color>
    <Color x:Key="PrimaryGradientEnd">#8B5A47</Color>

    <!-- Secondary Gradient (Light Gray variants) - ENHANCED FOR VISIBILITY -->
    <Color x:Key="SecondaryGradientStart">#F8F8F8</Color>
    <Color x:Key="SecondaryGradientMiddle">#E8E8E8</Color>
    <Color x:Key="SecondaryGradientEnd">#D8D8D8</Color>

    <!-- Success Gradient (Green variants) -->
    <Color x:Key="SuccessGradientStart">#4CAF50</Color>
    <Color x:Key="SuccessGradientMiddle">#388E3C</Color>
    <Color x:Key="SuccessGradientEnd">#2E7D32</Color>

    <!-- Error Gradient (Red variants) -->
    <Color x:Key="ErrorGradientStart">#F44336</Color>
    <Color x:Key="ErrorGradientMiddle">#D32F2F</Color>
    <Color x:Key="ErrorGradientEnd">#C62828</Color>

    <!-- Warning Gradient (Orange/Yellow variants) -->
    <Color x:Key="WarningGradientStart">#FFD54F</Color>
    <Color x:Key="WarningGradientMiddle">#FBC02D</Color>
    <Color x:Key="WarningGradientEnd">#F9A825</Color>

    <!-- Cancel Gradient (Gray variants) -->
    <Color x:Key="CancelGradientStart">#E0E0E0</Color>
    <Color x:Key="CancelGradientMiddle">#CCCCCC</Color>
    <Color x:Key="CancelGradientEnd">#BDBDBD</Color>

    <!-- Disabled Gradient (Gray variants) -->
    <Color x:Key="DisabledGradientStart">#BDBDBD</Color>
    <Color x:Key="DisabledGradientMiddle">#CCCCCC</Color>
    <Color x:Key="DisabledGradientEnd">#E0E0E0</Color>

    <!-- Brushes: Primary palette -->
    <SolidColorBrush x:Key="PrimaryBrush" Color="{StaticResource Primary}" />
    <SolidColorBrush x:Key="SecondaryBrush" Color="{StaticResource Secondary}" />
    <SolidColorBrush x:Key="TertiaryBrush" Color="{StaticResource Tertiary}" />

    <!-- Brushes: Surface and contrast -->
    <SolidColorBrush x:Key="SurfaceBrush" Color="{StaticResource Surface}" />
    <SolidColorBrush x:Key="SurfaceDarkBrush" Color="{StaticResource SurfaceDark}" />
    <SolidColorBrush x:Key="OnPrimaryBrush" Color="{StaticResource OnPrimary}" />
    <SolidColorBrush x:Key="OnSecondaryBrush" Color="{StaticResource OnSecondary}" />
    <SolidColorBrush x:Key="OnSurfaceBrush" Color="{StaticResource OnSurface}" />
    <SolidColorBrush x:Key="OnBackgroundBrush" Color="{StaticResource OnBackground}" />

    <!-- Brushes: Neutrals -->
    <SolidColorBrush x:Key="WhiteBrush" Color="{StaticResource White}" />
    <SolidColorBrush x:Key="BlackBrush" Color="{StaticResource Black}" />

    <!-- Brushes: Grayscale -->
    <SolidColorBrush x:Key="Gray100Brush" Color="{StaticResource Gray100}" />
    <SolidColorBrush x:Key="Gray200Brush" Color="{StaticResource Gray200}" />
    <SolidColorBrush x:Key="Gray300Brush" Color="{StaticResource Gray300}" />
    <SolidColorBrush x:Key="Gray400Brush" Color="{StaticResource Gray400}" />
    <SolidColorBrush x:Key="Gray500Brush" Color="{StaticResource Gray500}" />
    <SolidColorBrush x:Key="Gray600Brush" Color="{StaticResource Gray600}" />
    <SolidColorBrush x:Key="Gray900Brush" Color="{StaticResource Gray900}" />
    <SolidColorBrush x:Key="Gray950Brush" Color="{StaticResource Gray950}" />

    <!-- Brushes: Status -->
    <SolidColorBrush x:Key="ErrorBrush" Color="{StaticResource ErrorColor}" />
    <SolidColorBrush x:Key="SuccessBrush" Color="{StaticResource SuccessColor}" />
    <SolidColorBrush x:Key="WarningBrush" Color="{StaticResource WarningColor}" />
    <SolidColorBrush x:Key="InfoBrush" Color="{StaticResource InfoColor}" />

    <!-- Brushes: Disabled -->
    <SolidColorBrush x:Key="DisabledBackgroundBrush" Color="{StaticResource DisabledBackground}" />
    <SolidColorBrush x:Key="DisabledTextBrush" Color="{StaticResource DisabledText}" />
    <SolidColorBrush x:Key="DisabledBorderBrush" Color="{StaticResource DisabledBorder}" />

    <!-- Brushes: Borders and shadow -->
    <SolidColorBrush x:Key="BorderBrush" Color="{StaticResource BorderColor}" />
    <SolidColorBrush x:Key="DividerBrush" Color="{StaticResource DividerColor}" />
    <SolidColorBrush x:Key="ShadowBrush" Color="{StaticResource ShadowColor}" />

    <!-- ✅ GRADIENT BRUSHES - Centralized for Buttons -->

    <!-- Primary Gradient Brush (for main action buttons) -->
    <LinearGradientBrush x:Key="PrimaryGradientBrush" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="{StaticResource PrimaryGradientStart}" Offset="0.0" />
        <GradientStop Color="{StaticResource PrimaryGradientMiddle}" Offset="0.5" />
        <GradientStop Color="{StaticResource PrimaryGradientEnd}" Offset="1.0" />
    </LinearGradientBrush>

    <!-- Secondary Gradient Brush (for cancel/alternative buttons) -->
    <LinearGradientBrush x:Key="SecondaryGradientBrush" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="{StaticResource SecondaryGradientStart}" Offset="0.0" />
        <GradientStop Color="{StaticResource SecondaryGradientMiddle}" Offset="0.5" />
        <GradientStop Color="{StaticResource SecondaryGradientEnd}" Offset="1.0" />
    </LinearGradientBrush>

    <!-- Success Gradient Brush (for positive actions like save) -->
    <LinearGradientBrush x:Key="SuccessGradientBrush" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="{StaticResource SuccessGradientStart}" Offset="0.0" />
        <GradientStop Color="{StaticResource SuccessGradientMiddle}" Offset="0.5" />
        <GradientStop Color="{StaticResource SuccessGradientEnd}" Offset="1.0" />
    </LinearGradientBrush>

    <!-- Error Gradient Brush (for destructive actions like delete) -->
    <LinearGradientBrush x:Key="ErrorGradientBrush" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="{StaticResource ErrorGradientStart}" Offset="0.0" />
        <GradientStop Color="{StaticResource ErrorGradientMiddle}" Offset="0.5" />
        <GradientStop Color="{StaticResource ErrorGradientEnd}" Offset="1.0" />
    </LinearGradientBrush>

    <!-- Warning Gradient Brush (for warning actions) -->
    <LinearGradientBrush x:Key="WarningGradientBrush" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="{StaticResource WarningGradientStart}" Offset="0.0" />
        <GradientStop Color="{StaticResource WarningGradientMiddle}" Offset="0.5" />
        <GradientStop Color="{StaticResource WarningGradientEnd}" Offset="1.0" />
    </LinearGradientBrush>

    <!-- Disabled Gradient Brush (for disabled buttons) -->
    <LinearGradientBrush x:Key="DisabledGradientBrush" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="{StaticResource DisabledGradientStart}" Offset="0.0" />
        <GradientStop Color="{StaticResource DisabledGradientMiddle}" Offset="0.5" />
        <GradientStop Color="{StaticResource DisabledGradientEnd}" Offset="1.0" />
    </LinearGradientBrush>

    <!-- Disabled Gradient Brush (for disabled buttons) -->
    <LinearGradientBrush x:Key="CancelGradientBrush" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="{StaticResource CancelGradientStart}" Offset="0.0" />
        <GradientStop Color="{StaticResource CancelGradientMiddle}" Offset="0.5" />
        <GradientStop Color="{StaticResource CancelGradientEnd}" Offset="1.0" />
    </LinearGradientBrush>

</ResourceDictionary>