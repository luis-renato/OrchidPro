<?xml version="1.0" encoding="utf-8" ?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <!-- ✅ TEMPLATE 4: BUTTON STYLES TEMPLATES WITH CENTRALIZED GRADIENTS -->

    <!-- ✅ PRIMARY BUTTON (Save/Action buttons) - NOW WITH GRADIENT -->
    <Style x:Key="PrimaryButtonStyle" TargetType="Button">
        <Setter Property="Background" Value="{StaticResource PrimaryGradientBrush}" />
        <Setter Property="TextColor" Value="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource White}}" />
        <Setter Property="CornerRadius" Value="24" />
        <Setter Property="FontSize" Value="16" />
        <Setter Property="FontAttributes" Value="Bold" />
        <Setter Property="HeightRequest" Value="48" />
        <Setter Property="BorderColor" Value="{StaticResource Primary}" />
        <Setter Property="BorderWidth" Value="0" />
    </Style>

    <!-- ✅ SECONDARY BUTTON (Cancel/Alternative buttons) - VISIBLE GRADIENT -->
    <Style x:Key="SecondaryButtonStyle" TargetType="Button">
        <Setter Property="CornerRadius" Value="24" />
        <Setter Property="FontSize" Value="16" />
        <Setter Property="FontAttributes" Value="Bold" />
        <Setter Property="HeightRequest" Value="48" />
        <Setter Property="TextColor" Value="Black" />
        <Setter Property="BorderWidth" Value="0" />
        <Setter Property="BorderColor" Value="{StaticResource Gray500}" />
        <!-- ✅ FORCED GRADIENT: Use LinearGradientBrush directly for visibility -->
        <Setter Property="Background">
            <Setter.Value>
                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                    <GradientStop Color="#F0F0F0" Offset="0.0" />
                    <GradientStop Color="#E0E0E0" Offset="0.5" />
                    <GradientStop Color="#D0D0D0" Offset="1.0" />
                </LinearGradientBrush>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- ✅ FAB BUTTON (Floating Action Button) - USING CENTRALIZED GRADIENT -->
    <Style x:Key="FabButtonStyle" TargetType="Button">
        <Setter Property="TextColor" Value="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource White}}" />
        <Setter Property="FontSize" Value="14" />
        <Setter Property="FontAttributes" Value="Bold" />
        <Setter Property="CornerRadius" Value="28" />
        <Setter Property="WidthRequest" Value="160" />
        <Setter Property="HeightRequest" Value="56" />
        <Setter Property="HorizontalOptions" Value="End" />
        <Setter Property="VerticalOptions" Value="End" />
        <Setter Property="Margin" Value="20,20,30,30" />
        <Setter Property="Scale" Value="0.9" />
        <!-- ✅ USANDO GRADIENTE CENTRALIZADO -->
        <Setter Property="Background" Value="{StaticResource PrimaryGradientBrush}" />
        <!-- ✅ BORDA sutil para dar definição -->
        <Setter Property="BorderColor" Value="{StaticResource Primary}" />
        <Setter Property="BorderWidth" Value="1" />
    </Style>

    <!-- ✅ FAB WITH PLATFORM-SPECIFIC ELEVATION (ENHANCED WITH GRADIENT) -->
    <Style x:Key="FabWithElevationStyle" TargetType="Button">
        <Setter Property="TextColor" Value="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource White}}" />
        <Setter Property="Background" Value="{StaticResource PrimaryGradientBrush}" />
        <Setter Property="FontSize" Value="14" />
        <Setter Property="FontAttributes" Value="Bold" />
        <Setter Property="CornerRadius" Value="28" />
        <Setter Property="WidthRequest" Value="160" />
        <Setter Property="HeightRequest" Value="56" />
        <Setter Property="HorizontalOptions" Value="End" />
        <Setter Property="VerticalOptions" Value="End" />
        <Setter Property="Margin" Value="20,20,30,30" />
        <Setter Property="Scale" Value="0.9" />
        <Setter Property="BorderColor" Value="{StaticResource Primary}" />
        <Setter Property="BorderWidth" Value="0" />
        <!-- ✅ ELEVATION para Android (funciona melhor que Shadow) -->
        <Setter Property="ZIndex" Value="999" />
    </Style>

    <!-- ✅ DYNAMIC PRIMARY BUTTON (FIXED - no BackgroundColor override) -->
    <Style x:Key="DynamicPrimaryButtonStyle" TargetType="Button">
        <Setter Property="TextColor" Value="White" />
        <Setter Property="CornerRadius" Value="24" />
        <Setter Property="FontSize" Value="16" />
        <Setter Property="FontAttributes" Value="Bold" />
        <Setter Property="HeightRequest" Value="48" />
        <Setter Property="BorderWidth" Value="0" />
        <!-- ✅ DEFAULT: Success gradient when enabled -->
        <Setter Property="Background" Value="{StaticResource SuccessGradientBrush}" />
        <Setter Property="BorderColor" Value="{StaticResource SuccessColor}" />
        <!-- ✅ DISABLED STATE: Visual states handle the disabled appearance -->
        <Setter Property="VisualStateManager.VisualStateGroups">
            <VisualStateGroupList>
                <VisualStateGroup x:Name="CommonStates">
                    <VisualState x:Name="Normal">
                        <VisualState.Setters>
                            <Setter Property="Background" Value="{StaticResource SuccessGradientBrush}" />
                            <Setter Property="BorderColor" Value="{StaticResource SuccessColor}" />
                        </VisualState.Setters>
                    </VisualState>
                    <VisualState x:Name="Disabled">
                        <VisualState.Setters>
                            <Setter Property="Background" Value="{StaticResource DisabledGradientBrush}" />
                            <Setter Property="BorderColor" Value="{StaticResource DisabledBorder}" />
                            <Setter Property="TextColor" Value="{StaticResource DisabledText}" />
                        </VisualState.Setters>
                    </VisualState>
                </VisualStateGroup>
            </VisualStateGroupList>
        </Setter>
    </Style>

    <!-- ✅ SUCCESS BUTTON (for positive actions) - NEW -->
    <Style x:Key="SuccessButtonStyle" TargetType="Button">
        <Setter Property="Background" Value="{StaticResource SuccessGradientBrush}" />
        <Setter Property="TextColor" Value="White" />
        <Setter Property="CornerRadius" Value="24" />
        <Setter Property="FontSize" Value="16" />
        <Setter Property="FontAttributes" Value="Bold" />
        <Setter Property="HeightRequest" Value="48" />
        <Setter Property="BorderColor" Value="{StaticResource SuccessColor}" />
        <Setter Property="BorderWidth" Value="0" />
    </Style>

    <!-- ✅ ERROR/DELETE BUTTON (for destructive actions) - NEW -->
    <Style x:Key="ErrorButtonStyle" TargetType="Button">
        <Setter Property="Background" Value="{StaticResource ErrorGradientBrush}" />
        <Setter Property="TextColor" Value="White" />
        <Setter Property="CornerRadius" Value="24" />
        <Setter Property="FontSize" Value="16" />
        <Setter Property="FontAttributes" Value="Bold" />
        <Setter Property="HeightRequest" Value="48" />
        <Setter Property="BorderColor" Value="{StaticResource ErrorColor}" />
        <Setter Property="BorderWidth" Value="0" />
    </Style>

    <!-- ✅ WARNING BUTTON (for warning actions) - NEW -->
    <Style x:Key="WarningButtonStyle" TargetType="Button">
        <Setter Property="Background" Value="{StaticResource WarningGradientBrush}" />
        <Setter Property="TextColor" Value="Black" />
        <Setter Property="CornerRadius" Value="24" />
        <Setter Property="FontSize" Value="16" />
        <Setter Property="FontAttributes" Value="Bold" />
        <Setter Property="HeightRequest" Value="48" />
        <Setter Property="BorderColor" Value="{StaticResource WarningColor}" />
        <Setter Property="BorderWidth" Value="0" />
    </Style>

    <!-- ✅ DISABLED BUTTON (for disabled state) - NEW -->
    <Style x:Key="DisabledButtonStyle" TargetType="Button">
        <Setter Property="Background" Value="{StaticResource DisabledGradientBrush}" />
        <Setter Property="TextColor" Value="{StaticResource DisabledText}" />
        <Setter Property="CornerRadius" Value="24" />
        <Setter Property="FontSize" Value="16" />
        <Setter Property="FontAttributes" Value="Bold" />
        <Setter Property="HeightRequest" Value="48" />
        <Setter Property="BorderColor" Value="{StaticResource DisabledBorder}" />
        <Setter Property="BorderWidth" Value="0" />
        <Setter Property="IsEnabled" Value="False" />
    </Style>

    <!-- ✅ CANCEL BUTTON (for calcel) -->
    <Style x:Key="CancelButtonStyle" TargetType="Button">
        <Setter Property="Background" Value="{StaticResource CancelGradientBrush}" />
        <Setter Property="TextColor" Value="Black" />
        <Setter Property="CornerRadius" Value="24" />
        <Setter Property="FontSize" Value="16" />
        <Setter Property="FontAttributes" Value="Bold" />
        <Setter Property="HeightRequest" Value="48" />
        <Setter Property="BorderColor" Value="{StaticResource DisabledBorder}" />
        <Setter Property="BorderWidth" Value="0" />
    </Style>

</ResourceDictionary>