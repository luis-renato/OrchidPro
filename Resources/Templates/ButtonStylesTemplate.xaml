<?xml version="1.0" encoding="utf-8" ?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <!-- ✅ TEMPLATE 4: BUTTON STYLES TEMPLATES -->
    <!-- Códigos EXATOS extraídos dos botões do Family -->

    <!-- ✅ PRIMARY BUTTON (Save/Action buttons) -->
    <Style x:Key="PrimaryButtonStyle" TargetType="Button">
        <Setter Property="BackgroundColor" Value="{AppThemeBinding Light={StaticResource Primary}, Dark={StaticResource PrimaryDark}}" />
        <Setter Property="TextColor" Value="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource White}}" />
        <Setter Property="CornerRadius" Value="24" />
        <Setter Property="FontSize" Value="16" />
        <Setter Property="FontAttributes" Value="Bold" />
        <Setter Property="HeightRequest" Value="48" />
    </Style>

    <!-- ✅ SECONDARY BUTTON (Cancel/Alternative buttons) -->
    <Style x:Key="SecondaryButtonStyle" TargetType="Button">
        <Setter Property="BackgroundColor" Value="LightGray" />
        <Setter Property="TextColor" Value="Black" />
        <Setter Property="CornerRadius" Value="24" />
        <Setter Property="FontSize" Value="16" />
        <Setter Property="FontAttributes" Value="Bold" />
        <Setter Property="HeightRequest" Value="48" />
    </Style>

    <!-- ✅ FAB BUTTON (Floating Action Button) -->
    <Style x:Key="FabButtonStyle" TargetType="Button">
        <Setter Property="FontSize" Value="14" />
        <Setter Property="FontAttributes" Value="Bold" />
        <Setter Property="CornerRadius" Value="28" />
        <Setter Property="WidthRequest" Value="160" />
        <Setter Property="HeightRequest" Value="56" />
        <Setter Property="HorizontalOptions" Value="End" />
        <Setter Property="VerticalOptions" Value="End" />
        <Setter Property="Margin" Value="20,20,30,30" />
        <Setter Property="Scale" Value="0.9" />
        <Setter Property="BackgroundColor" Value="{AppThemeBinding Light={StaticResource Primary}, Dark={StaticResource PrimaryDark}}" />
        <Setter Property="TextColor" Value="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource White}}" />
    </Style>

    <!-- ✅ DYNAMIC PRIMARY BUTTON (com cor bindável como no Save) -->
    <Style x:Key="DynamicPrimaryButtonStyle" TargetType="Button">
        <Setter Property="TextColor" Value="White" />
        <Setter Property="CornerRadius" Value="24" />
        <Setter Property="FontSize" Value="16" />
        <Setter Property="FontAttributes" Value="Bold" />
        <Setter Property="HeightRequest" Value="48" />
        <!-- BackgroundColor fica bindável: BackgroundColor="{Binding SaveButtonColor}" -->
    </Style>

</ResourceDictionary>