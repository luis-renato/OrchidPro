<?xml version="1.0" encoding="utf-8" ?>
<ContentPage x:Class="OrchidPro.Views.Pages.Botanical.SpeciesEditPage"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:OrchidPro.ViewModels.Botanical.Species"
             xmlns:sfbusy="clr-namespace:Syncfusion.Maui.Core;assembly=Syncfusion.Maui.Core"
             xmlns:sfcombobox="clr-namespace:Syncfusion.Maui.Inputs;assembly=Syncfusion.Maui.Inputs"
             x:DataType="vm:SpeciesEditViewModel"
             Title="Species"
             BackgroundColor="White">

    <Grid>
        <!-- Main Content -->
        <ScrollView>
            <StackLayout Padding="16" Spacing="8">

                <!-- Header seguindo padrÃ£o EXATO do GenusEditPage -->
                <StackLayout Spacing="8">
                    <Label Text="{Binding PageTitle}"
                           FontSize="28"
                           FontAttributes="Bold"
                           TextColor="Black"
                           HorizontalOptions="Start" />

                    <Label Text="Species Information"
                           FontSize="14" 
                           TextColor="Gray"
                           Opacity="0.8" />

                    <ProgressBar Progress="{Binding FormCompletionProgress}"
                                ProgressColor="{StaticResource Primary}"
                                BackgroundColor="{StaticResource Gray200}"
                                HeightRequest="4"
                                Margin="0,8,0,0" />
                </StackLayout>

                <!-- Genus Selection - EXATO como GenusEditPage com Family -->
                <ContentView Style="{StaticResource FormFieldFrameStyle}">
                    <StackLayout Style="{StaticResource FormFieldStackStyle}">
                        <Grid ColumnDefinitions="*,Auto" ColumnSpacing="8">
                            <Label Grid.Column="0" 
                                   Text="Genus *" 
                                   Style="{StaticResource FormFieldLabelStyle}"
                                   VerticalOptions="Center" />
                            <Button Grid.Column="1"
                                    Text="+ Create New Genus"
                                    Command="{Binding CreateNewGenusCommand}"
                                    FontSize="12"
                                    BackgroundColor="Transparent"
                                    TextColor="{StaticResource Primary}"
                                    Padding="6,0"
                                    MaximumHeightRequest="16"
                                    VerticalOptions="Center" />
                        </Grid>

                        <!-- SfComboBox EXATO como GenusEditPage -->
                        <sfcombobox:SfComboBox ItemsSource="{Binding AvailableGenera}"
                                               DisplayMemberPath="Name"
                                               TextMemberPath="Name"
                                               SelectedItem="{Binding SelectedGenus}"
                                               Placeholder="Select a genus..."
                                               PlaceholderColor="Gray"
                                               IsEditable="True"
                                               IsFilteringEnabled="True"
                                               TextSearchMode="Contains"
                                               TextColor="Black"
                                               DropDownItemTextColor="Black"
                                               SelectedDropDownItemBackground="LightGray"
                                               DropDownBackground="White"
                                               MaxDropDownHeight="200"
                                               DropDownIconColor="Red"
                                               Stroke="Red" 
                                               SelectionTextHighlightColor="Transparent"
                                               FontSize="16"
                                               BackgroundColor="Transparent"
                                               HighlightedTextColor="Red"
                                               HighlightedTextFontAttributes="Bold"
                                               NoResultsFoundText="Not Found" />

                    </StackLayout>
                </ContentView>

                <!-- Name Field EXATO como GenusEditPage -->
                <ContentView Style="{StaticResource FormFieldFrameStyle}">
                    <StackLayout Style="{StaticResource FormFieldStackStyle}">
                        <Label Text="Name *" Style="{StaticResource FormFieldLabelStyle}" />

                        <Entry Text="{Binding Name}"
                               Placeholder="Enter species name"
                               FontSize="16"
                               TextColor="Black"
                               BackgroundColor="Transparent" />

                        <Label Text="{Binding NameValidationMessage}"
                               FontSize="12"
                               TextColor="Red"
                               IsVisible="{Binding IsNameValid, Converter={StaticResource InvertedBoolConverter}}" />
                    </StackLayout>
                </ContentView>

                <!-- Description Field EXATO como GenusEditPage -->
                <ContentView Style="{StaticResource FormFieldFrameStyle}">
                    <StackLayout Style="{StaticResource FormFieldStackStyle}">
                        <Label Text="Description" Style="{StaticResource FormFieldLabelStyle}" />

                        <Editor Text="{Binding Description}"
                                Placeholder="Optional description..."
                                FontSize="16"
                                TextColor="Black"
                                BackgroundColor="Transparent"
                                HeightRequest="80" />
                    </StackLayout>
                </ContentView>

                <!-- Common Name (Species-specific) -->
                <ContentView Style="{StaticResource FormFieldFrameStyle}">
                    <StackLayout Style="{StaticResource FormFieldStackStyle}">
                        <Label Text="Common Name" Style="{StaticResource FormFieldLabelStyle}" />

                        <Entry Text="{Binding CommonName}"
                               Placeholder="Popular or commercial name"
                               FontSize="16"
                               TextColor="Black"
                               BackgroundColor="Transparent" />
                    </StackLayout>
                </ContentView>

                <!-- Classification Section -->
                <Label Text="Classification" 
                       FontSize="18" 
                       FontAttributes="Bold" 
                       TextColor="{StaticResource Primary}" 
                       Margin="0,16,0,8" />

                <!-- Size Category -->
                <ContentView Style="{StaticResource FormFieldFrameStyle}">
                    <StackLayout Style="{StaticResource FormFieldStackStyle}">
                        <Label Text="Size Category" Style="{StaticResource FormFieldLabelStyle}" />

                        <sfcombobox:SfComboBox ItemsSource="{Binding SizeCategories}"
                                               SelectedItem="{Binding SizeCategory}"
                                               Placeholder="Select size category..."
                                               PlaceholderColor="Gray"
                                               IsEditable="False"
                                               TextColor="Black"
                                               DropDownItemTextColor="Black"
                                               SelectedDropDownItemBackground="LightGray"
                                               DropDownBackground="White"
                                               MaxDropDownHeight="200"
                                               FontSize="16"
                                               BackgroundColor="Transparent" />
                    </StackLayout>
                </ContentView>

                <!-- Growth Habit -->
                <ContentView Style="{StaticResource FormFieldFrameStyle}">
                    <StackLayout Style="{StaticResource FormFieldStackStyle}">
                        <Label Text="Growth Habit" Style="{StaticResource FormFieldLabelStyle}" />

                        <sfcombobox:SfComboBox ItemsSource="{Binding GrowthHabits}"
                                               SelectedItem="{Binding GrowthHabit}"
                                               Placeholder="Select growth habit..."
                                               PlaceholderColor="Gray"
                                               IsEditable="False"
                                               TextColor="Black"
                                               DropDownItemTextColor="Black"
                                               SelectedDropDownItemBackground="LightGray"
                                               DropDownBackground="White"
                                               MaxDropDownHeight="200"
                                               FontSize="16"
                                               BackgroundColor="Transparent" />
                    </StackLayout>
                </ContentView>

                <!-- Rarity Status -->
                <ContentView Style="{StaticResource FormFieldFrameStyle}">
                    <StackLayout Style="{StaticResource FormFieldStackStyle}">
                        <Label Text="Rarity Status" Style="{StaticResource FormFieldLabelStyle}" />

                        <sfcombobox:SfComboBox ItemsSource="{Binding RarityStatuses}"
                                               SelectedItem="{Binding RarityStatus}"
                                               Placeholder="Select rarity status..."
                                               PlaceholderColor="Gray"
                                               IsEditable="False"
                                               TextColor="Black"
                                               DropDownItemTextColor="Black"
                                               SelectedDropDownItemBackground="LightGray"
                                               DropDownBackground="White"
                                               MaxDropDownHeight="200"
                                               FontSize="16"
                                               BackgroundColor="Transparent" />
                    </StackLayout>
                </ContentView>

                <!-- Blooming Information Section -->
                <Label Text="Blooming Information" 
                       FontSize="18" 
                       FontAttributes="Bold" 
                       TextColor="{StaticResource Primary}" 
                       Margin="0,16,0,8" />

                <!-- Bloom Season -->
                <ContentView Style="{StaticResource FormFieldFrameStyle}">
                    <StackLayout Style="{StaticResource FormFieldStackStyle}">
                        <Label Text="Bloom Season" Style="{StaticResource FormFieldLabelStyle}" />

                        <sfcombobox:SfComboBox ItemsSource="{Binding BloomSeasons}"
                                               SelectedItem="{Binding BloomSeason}"
                                               Placeholder="Select bloom season..."
                                               PlaceholderColor="Gray"
                                               IsEditable="False"
                                               TextColor="Black"
                                               DropDownItemTextColor="Black"
                                               SelectedDropDownItemBackground="LightGray"
                                               DropDownBackground="White"
                                               MaxDropDownHeight="200"
                                               FontSize="16"
                                               BackgroundColor="Transparent" />
                    </StackLayout>
                </ContentView>

                <!-- Bloom Duration -->
                <ContentView Style="{StaticResource FormFieldFrameStyle}">
                    <StackLayout Style="{StaticResource FormFieldStackStyle}">
                        <Label Text="Bloom Duration" Style="{StaticResource FormFieldLabelStyle}" />

                        <Entry Text="{Binding BloomDuration}"
                               Placeholder="e.g., 2-3 weeks"
                               FontSize="16"
                               TextColor="Black"
                               BackgroundColor="Transparent" />
                    </StackLayout>
                </ContentView>

                <!-- Fragant -->
                <ContentView Style="{StaticResource FormFieldFrameStyle}">
                    <StackLayout Style="{StaticResource FormFieldStackStyle}">
                        <!-- Fragrance Toggle (Species-specific) -->
                        <Grid ColumnDefinitions="Auto,*,Auto">
                            <Label Grid.Column="0"
                                   Text="ð¸"
                                   FontSize="24"
                                   VerticalOptions="Center" />

                            <StackLayout Grid.Column="1" 
                                        Margin="12,0,0,0"
                                        VerticalOptions="Center">
                                <Label Text="Fragrant"
                                       FontSize="16"
                                       FontAttributes="Bold"
                                       TextColor="Black" />
                                <Label Text="Species has fragrance"
                                       FontSize="12"
                                       TextColor="Gray" />
                            </StackLayout>

                            <Switch Grid.Column="2"
                                    IsToggled="{Binding Fragrance}"
                                    OnColor="{StaticResource Primary}"
                                    ThumbColor="White"
                                    VerticalOptions="Center" />
                        </Grid>
                    </StackLayout>
                </ContentView>

                <!-- Notes -->
                <ContentView Style="{StaticResource FormFieldFrameStyle}">
                    <StackLayout Style="{StaticResource FormFieldStackStyle}">
                        <Label Text="Additional Notes" Style="{StaticResource FormFieldLabelStyle}" />

                        <Editor Text="{Binding Notes}"
                                Placeholder="Any additional information..."
                                FontSize="16"
                                TextColor="Black"
                                BackgroundColor="Transparent"
                                HeightRequest="80" />
                    </StackLayout>
                </ContentView>

                <!-- Blooming Information Section -->
                <Label Text="Configuration" 
                       FontSize="18" 
                       FontAttributes="Bold" 
                       TextColor="{StaticResource Primary}" 
                       Margin="0,16,0,8" />

                <!-- Settings EXATO como GenusEditPage COM Fragrance -->
                <ContentView Style="{StaticResource FormFieldFrameStyle}">
                    <StackLayout Style="{StaticResource FormSettingsStackStyle}">
                        <Label Text="Settings" Style="{StaticResource FormFieldLabelStyle}" />

                        <!-- Active Toggle -->
                        <Grid ColumnDefinitions="Auto,*,Auto">
                            <Label Grid.Column="0"
                                   Text="ð¢"
                                   FontSize="24"
                                   VerticalOptions="Center" />

                            <StackLayout Grid.Column="1" 
                                        Margin="12,0,0,0"
                                        VerticalOptions="Center">
                                <Label Text="Active"
                                       FontSize="16"
                                       FontAttributes="Bold"
                                       TextColor="Black" />
                                <Label Text="Species is available for use"
                                       FontSize="12"
                                       TextColor="Gray" />
                            </StackLayout>

                            <Switch Grid.Column="2"
                                    IsToggled="{Binding IsActive}"
                                    OnColor="{StaticResource SuccessColor}"
                                    ThumbColor="White"
                                    VerticalOptions="Center" />
                        </Grid>

                        <!-- Favorite Toggle -->
                        <Grid ColumnDefinitions="Auto,*,Auto">
                            <Label Grid.Column="0"
                                   Text="â­"
                                   FontSize="24"
                                   VerticalOptions="Center" />

                            <StackLayout Grid.Column="1" 
                                        Margin="12,0,0,0"
                                        VerticalOptions="Center">
                                <Label Text="Favorite"
                                       FontSize="16"
                                       FontAttributes="Bold"
                                       TextColor="Black" />
                                <Label Text="Mark as important species"
                                       FontSize="12"
                                       TextColor="Gray" />
                            </StackLayout>

                            <Switch Grid.Column="2"
                                    IsToggled="{Binding IsFavorite}"
                                    OnColor="{StaticResource WarningColor}"
                                    ThumbColor="White"
                                    VerticalOptions="Center" />
                        </Grid>

                    </StackLayout>
                </ContentView>

                <!-- Action Buttons -->
                <Grid ColumnDefinitions="*,*" 
                      ColumnSpacing="16"
                      Margin="0,10,0,10">

                    <Button Grid.Column="0"
                            Text="Cancel"
                            Style="{StaticResource CancelButtonStyle}"
                            Command="{Binding CancelCommand}" />

                    <Button Grid.Column="1"
                            Text="{Binding SaveButtonText}"
                            Style="{StaticResource DynamicPrimaryButtonStyle}"
                            Command="{Binding SaveCommand}"
                            IsEnabled="{Binding CanSave}" />

                </Grid>

                <!-- Save and Add Another Button (only for new species) -->
                <Button Text="Save &amp; Add Another"
                        Command="{Binding SaveAndContinueCommand}"
                        IsVisible="{Binding IsEditMode, Converter={StaticResource InvertedBoolConverter}}"
                        Style="{StaticResource DynamicPrimaryButtonStyle}"
                        IsEnabled="{Binding CanSave}"
                        Margin="0,0,0,0" />

                <!-- Delete Button (only for edit mode) -->
                <Button Text="Delete"
                        Command="{Binding DeleteCommand}"
                        IsVisible="{Binding IsEditMode}"
                        Style="{StaticResource ErrorButtonStyle}"
                        Margin="0,0,0,0" />

            </StackLayout>
        </ScrollView>

        <!-- Loading Overlay EXATO como GenusEditPage -->
        <ContentView Style="{StaticResource SavingOverlayStyle}" />

    </Grid>

</ContentPage>