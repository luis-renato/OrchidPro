<?xml version="1.0" encoding="utf-8" ?>
<ContentPage x:Class="OrchidPro.Views.Pages.VariantEditPage"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:OrchidPro.ViewModels.Variants"
             xmlns:sfbusy="clr-namespace:Syncfusion.Maui.Core;assembly=Syncfusion.Maui.Core"
             x:DataType="vm:VariantEditViewModel"
             Title="Variant"
             BackgroundColor="White">

    <Grid>
        <ScrollView>
            <StackLayout Padding="16" Spacing="8">

                <!-- Header seguindo padrão EXATO do FamilyEditPage -->
                <StackLayout Spacing="8">
                    <Label Text="{Binding PageTitle}"
                           FontSize="28"
                           FontAttributes="Bold"
                           TextColor="Black"
                           HorizontalOptions="Start" />

                    <Label Text="Variant Information"
                           FontSize="14" 
                           TextColor="Gray"
                           Opacity="0.8" />

                    <ProgressBar Progress="{Binding FormCompletionProgress}"
                                ProgressColor="{StaticResource Primary}"
                                BackgroundColor="{StaticResource Gray200}"
                                HeightRequest="4"
                                Margin="0,8,0,0" />
                </StackLayout>

                <!-- Name Field EXATO como FamilyEditPage -->
                <ContentView Style="{StaticResource FormFieldFrameStyle}">
                    <StackLayout Style="{StaticResource FormFieldStackStyle}">
                        <Label Text="Name *" Style="{StaticResource FormFieldLabelStyle}" />

                        <Entry Text="{Binding Name}"
                               Placeholder="Enter variant name (e.g., 'Alba', 'Coerulea', 'Semi-alba')"
                               FontSize="16"
                               TextColor="Black"
                               BackgroundColor="Transparent" />

                        <Label Text="{Binding NameValidationMessage}"
                               FontSize="12"
                               TextColor="Red"
                               IsVisible="{Binding IsNameValid, Converter={StaticResource InvertedBoolConverter}}" />
                    </StackLayout>
                </ContentView>

                <!-- Description Field EXATO como FamilyEditPage -->
                <ContentView Style="{StaticResource FormFieldFrameStyle}">
                    <StackLayout Style="{StaticResource FormFieldStackStyle}">
                        <Label Text="Description" Style="{StaticResource FormFieldLabelStyle}" />

                        <Editor Text="{Binding Description}"
                                Placeholder="Describe the variant characteristics, color patterns, or unique features..."
                                FontSize="16"
                                TextColor="Black"
                                BackgroundColor="Transparent"
                                HeightRequest="80" />
                    </StackLayout>
                </ContentView>

                <!-- Configuration Section -->
                <Label Text="Configuration" 
                       FontSize="18" 
                       FontAttributes="Bold" 
                       TextColor="{StaticResource Primary}" 
                       Margin="0,16,0,8" />

                <!-- Settings EXATO como FamilyEditPage -->
                <ContentView Style="{StaticResource FormFieldFrameStyle}">
                    <StackLayout Style="{StaticResource FormSettingsStackStyle}">
                        <Label Text="Settings" Style="{StaticResource FormFieldLabelStyle}" />

                        <!-- Active Toggle -->
                        <Grid ColumnDefinitions="Auto,*,Auto">
                            <Label Grid.Column="0"
                                   Text="🟢"
                                   FontSize="24"
                                   VerticalOptions="Center" />

                            <StackLayout Grid.Column="1" Spacing="4" VerticalOptions="Center" Margin="12,0">
                                <Label Text="Active Status"
                                       FontSize="16"
                                       FontAttributes="Bold"
                                       TextColor="Black" />
                                <Label Text="Enable this variant for selection in plant records"
                                       FontSize="14"
                                       TextColor="Gray" />
                            </StackLayout>

                            <Switch Grid.Column="2"
                                    IsToggled="{Binding IsActive}"
                                    OnColor="{StaticResource Primary}"
                                    ThumbColor="White"
                                    VerticalOptions="Center" />
                        </Grid>

                        <!-- Favorite Toggle -->
                        <Grid ColumnDefinitions="Auto,*,Auto">
                            <Label Grid.Column="0"
                                   Text="⭐"
                                   FontSize="24"
                                   VerticalOptions="Center" />

                            <StackLayout Grid.Column="1" Spacing="4" VerticalOptions="Center" Margin="12,0">
                                <Label Text="Favorite Variant"
                                       FontSize="16"
                                       FontAttributes="Bold"
                                       TextColor="Black" />
                                <Label Text="Mark as favorite for quick access and priority display"
                                       FontSize="14"
                                       TextColor="Gray" />
                            </StackLayout>

                            <Switch Grid.Column="2"
                                    IsToggled="{Binding IsFavorite}"
                                    OnColor="{StaticResource WarningColor}"
                                    ThumbColor="White"
                                    VerticalOptions="Center" />
                        </Grid>

                    </StackLayout>
                </ContentView>

                <!-- Action Buttons EXATO como FamilyEditPage -->
                <Grid ColumnDefinitions="*,*" 
                      ColumnSpacing="16"
                      Margin="0,10,0,10">

                    <Button Grid.Column="0"
                            Text="Cancel"
                            Style="{StaticResource CancelButtonStyle}"
                            Command="{Binding CancelCommand}" />

                    <Button Grid.Column="1"
                            Text="{Binding SaveButtonText}"
                            Style="{StaticResource DynamicPrimaryButtonStyle}"
                            Command="{Binding SaveCommand}"
                            IsEnabled="{Binding CanSave}" />

                </Grid>

                <!-- 🔧 FIXED: Save and Add Another Button (only for new variant) -->
                <Button Text="Save &amp; Add Another"
                        Command="{Binding SaveAndContinueCommand}"
                        IsVisible="{Binding ShowSaveAndContinue}"
                        Style="{StaticResource DynamicPrimaryButtonStyle}"
                        IsEnabled="{Binding CanSave}"
                        Margin="0,0,0,0" />

                <!-- 🔧 FIXED: Delete Button (only for edit mode) -->
                <Button Text="Delete"
                        Command="{Binding DeleteWithValidationCommand}"
                        IsVisible="{Binding IsEditMode}"
                        IsEnabled="{Binding CanDelete}"
                        Style="{StaticResource ErrorButtonStyle}"
                        Margin="0,0,0,0" />

            </StackLayout>
        </ScrollView>

        <!-- Loading Overlay EXATO como FamilyEditPage -->
        <ContentView Style="{StaticResource SavingOverlayStyle}" />

    </Grid>

</ContentPage>