<?xml version="1.0" encoding="utf-8" ?>
<ContentPage x:Class="OrchidPro.Views.Pages.FamilyEditPage"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:OrchidPro.ViewModels.Families"
             xmlns:sfbusy="clr-namespace:Syncfusion.Maui.Core;assembly=Syncfusion.Maui.Core"
             x:DataType="vm:FamilyEditViewModel"
             Title="Families"
             BackgroundColor="White">

    <Grid>
        <!-- Main Content -->
        <ScrollView>
            <StackLayout Padding="16" Spacing="20">

                <!-- Header -->
                <StackLayout Spacing="8">
                    <Label Text="{Binding PageTitle}"
                           FontSize="28"
                           FontAttributes="Bold"
                           TextColor="Black"
                           HorizontalOptions="Start" />

                    <Label Text="Family Information"
                           FontSize="14" 
                           TextColor="Gray"
                           Opacity="0.8" />

                    <ProgressBar Progress="{Binding FormCompletionProgress}"
                                ProgressColor="{StaticResource Primary}"
                                BackgroundColor="{StaticResource Gray200}"
                                HeightRequest="4"
                                Margin="0,8,0,0" />
                </StackLayout>

                <!-- Name Field -->
                <Frame HasShadow="False" 
                       BorderColor="LightGray" 
                       CornerRadius="12" 
                       Padding="16"
                       BackgroundColor="WhiteSmoke">
                    <StackLayout Spacing="8">
                        <Label Text="Name *"
                               FontSize="12"
                               FontAttributes="Bold"
                               TextColor="{StaticResource Primary}" />

                        <Entry Text="{Binding Name}"
                               Placeholder="Enter family name"
                               FontSize="16"
                               TextColor="Black"
                               BackgroundColor="Transparent" />

                        <Label Text="{Binding NameValidationMessage}"
                               FontSize="12"
                               TextColor="Red"
                               IsVisible="{Binding IsNameValid, Converter={StaticResource InvertedBoolConverter}}" />
                    </StackLayout>
                </Frame>

                <!-- Description Field -->
                <Frame HasShadow="False" 
                       BorderColor="LightGray" 
                       CornerRadius="12" 
                       Padding="16"
                       BackgroundColor="WhiteSmoke">
                    <StackLayout Spacing="8">
                        <Label Text="Description"
                               FontSize="12"
                               FontAttributes="Bold"
                               TextColor="{StaticResource Primary}" />

                        <Editor Text="{Binding Description}"
                                Placeholder="Optional description..."
                                FontSize="16"
                                TextColor="Black"
                                BackgroundColor="Transparent"
                                HeightRequest="80" />
                    </StackLayout>
                </Frame>

                <!-- Settings -->
                <Frame HasShadow="False" 
                       BorderColor="LightGray" 
                       CornerRadius="12" 
                       Padding="16"
                       BackgroundColor="WhiteSmoke">
                    <StackLayout Spacing="16">
                        <Label Text="Settings"
                               FontSize="12"
                               FontAttributes="Bold"
                               TextColor="{StaticResource Primary}" />

                        <!-- Active Toggle -->
                        <Grid ColumnDefinitions="Auto,*,Auto">
                            <Label Grid.Column="0"
                                   Text="🟢"
                                   FontSize="24"
                                   VerticalOptions="Center" />

                            <StackLayout Grid.Column="1" 
                                        Margin="12,0,0,0"
                                        VerticalOptions="Center">
                                <Label Text="Active"
                                       FontSize="16"
                                       FontAttributes="Bold"
                                       TextColor="Black" />
                                <Label Text="Family is available for use"
                                       FontSize="12"
                                       TextColor="Gray" />
                            </StackLayout>

                            <Switch Grid.Column="2"
                                    IsToggled="{Binding IsActive}"
                                    OnColor="{StaticResource SuccessColor}"
                                    ThumbColor="White"
                                    VerticalOptions="Center" />
                        </Grid>

                        <!-- Favorite Toggle -->
                        <Grid ColumnDefinitions="Auto,*,Auto">
                            <Label Grid.Column="0"
                                   Text="⭐"
                                   FontSize="24"
                                   VerticalOptions="Center" />

                            <StackLayout Grid.Column="1" 
                                        Margin="12,0,0,0"
                                        VerticalOptions="Center">
                                <Label Text="Favorite"
                                       FontSize="16"
                                       FontAttributes="Bold"
                                       TextColor="Black" />
                                <Label Text="Mark as important family"
                                       FontSize="12"
                                       TextColor="Gray" />
                            </StackLayout>

                            <Switch Grid.Column="2"
                                    IsToggled="{Binding IsFavorite}"
                                    OnColor="{StaticResource WarningColor}"
                                    ThumbColor="White"
                                    VerticalOptions="Center" />
                        </Grid>

                    </StackLayout>
                </Frame>

                <!-- Bottom Buttons -->
                <Grid ColumnDefinitions="*,*" 
                      ColumnSpacing="16"
                      Margin="0,24,0,0">

                    <Button Grid.Column="0"
                            Text="Cancel"
                            BackgroundColor="LightGray"
                            TextColor="Black"
                            CornerRadius="24"
                            FontSize="16"
                            FontAttributes="Bold"
                            HeightRequest="48"
                            Command="{Binding CancelCommand}" />

                    <Button Grid.Column="1"
                            Text="{Binding SaveButtonText}"
                            BackgroundColor="{Binding SaveButtonColor}"
                            TextColor="White"
                            CornerRadius="24"
                            FontSize="16"
                            FontAttributes="Bold"
                            HeightRequest="48"
                            Command="{Binding SaveFamilyCommand}"
                            IsEnabled="{Binding IsNameValid}" />

                </Grid>

            </StackLayout>
        </ScrollView>

        <!-- ✅ SYNCFUSION SfBusyIndicator em Frame (melhor das duas opções) -->
        <Grid IsVisible="{Binding IsBusy}" 
              BackgroundColor="#80000000">
            <Frame BackgroundColor="{AppThemeBinding Light={StaticResource Surface}, Dark={StaticResource SurfaceDark}}"
                   BorderColor="{StaticResource BorderColor}"
                   CornerRadius="16"
                   Padding="32"
                   HorizontalOptions="Center"
                   VerticalOptions="Center"
                   HasShadow="True">

                <StackLayout Spacing="16" HorizontalOptions="Center">
                    <!-- SfBusyIndicator sem overlay próprio -->
                    <sfbusy:SfBusyIndicator IsVisible="True"
                                            IsRunning="True"
                                            AnimationType="HorizontalPulsingBox"
                                            IndicatorColor="{AppThemeBinding Light={StaticResource Primary}, Dark={StaticResource White}}"
                                            OverlayFill="Transparent"
                                            WidthRequest="50"
                                            HeightRequest="50" />

                    <!-- Mensagem customizada -->
                    <Label Text="Saving..."
                           FontSize="16"
                           FontAttributes="Bold"
                           TextColor="{AppThemeBinding Light={StaticResource OnSurface}, Dark={StaticResource White}}"
                           HorizontalOptions="Center" />

                    <!-- Ícone opcional para operações de save -->
                    <Label Text="💾"
                           FontSize="24"
                           HorizontalOptions="Center" />
                </StackLayout>

            </Frame>
        </Grid>

    </Grid>

</ContentPage>