<?xml version="1.0" encoding="utf-8" ?>
<ContentPage x:Class="OrchidPro.Views.Pages.GenusEditPage"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:OrchidPro.ViewModels.Genera"
             xmlns:models="clr-namespace:OrchidPro.Models"
             xmlns:sfbusy="clr-namespace:Syncfusion.Maui.Core;assembly=Syncfusion.Maui.Core"
             x:DataType="vm:GenusEditViewModel"
             Title="{Binding PageTitle}"
             BackgroundColor="White">

    <Grid>
        <!-- Main Content -->
        <ScrollView>
            <StackLayout Padding="16" Spacing="20">

                <!-- Header -->
                <StackLayout Spacing="8">
                    <Label Text="{Binding PageTitle}"
                           FontSize="28"
                           FontAttributes="Bold"
                           TextColor="Black"
                           HorizontalOptions="Start" />

                    <Label Text="Genus Information"
                           FontSize="14" 
                           TextColor="Gray"
                           Opacity="0.8" />

                    <ProgressBar Progress="{Binding FormCompletionProgress}"
                                ProgressColor="{StaticResource Primary}"
                                BackgroundColor="{StaticResource Gray200}"
                                HeightRequest="4"
                                Margin="0,8,0,0" />
                </StackLayout>

                <!-- Family Selection Field -->
                <ContentView Style="{StaticResource FormFieldFrameStyle}">
                    <StackLayout Style="{StaticResource FormFieldStackStyle}">
                        <Label Text="Family *" Style="{StaticResource FormFieldLabelStyle}" />

                        <!-- Current family display -->
                        <Grid ColumnDefinitions="*,Auto" ColumnSpacing="10" IsVisible="{Binding SelectedFamilyName, Converter={StaticResource StringToBoolConverter}}">
                            <Label Grid.Column="0"
                                   Text="{Binding SelectedFamilyName}"
                                   FontSize="16"
                                   TextColor="Black"
                                   VerticalOptions="Center" />

                            <Button Grid.Column="1"
                                    Text="Change"
                                    Command="{Binding SelectFamilyCommand}"
                                    FontSize="14"
                                    BackgroundColor="{StaticResource Secondary}"
                                    TextColor="White"
                                    CornerRadius="12"
                                    Padding="12,6" />
                        </Grid>

                        <!-- Select family button when no family selected -->
                        <Button Text="Select Family"
                                Command="{Binding SelectFamilyCommand}"
                                FontSize="16"
                                BackgroundColor="{StaticResource Primary}"
                                TextColor="White"
                                CornerRadius="12"
                                HeightRequest="40"
                                IsVisible="{Binding SelectedFamilyName, Converter={StaticResource InvertedStringToBoolConverter}}" />

                        <!-- Family selection dropdown/picker -->
                        <CollectionView ItemsSource="{Binding AvailableFamilies}"
                                        IsVisible="{Binding IsFamilySelectionVisible}"
                                        MaximumHeightRequest="200"
                                        BackgroundColor="White">
                            <CollectionView.ItemTemplate>
                                <DataTemplate x:DataType="models:Family">
                                    <Border Padding="12,8"
                                            BackgroundColor="Transparent">
                                        <Border.GestureRecognizers>
                                            <TapGestureRecognizer Command="{Binding Source={RelativeSource AncestorType={x:Type vm:GenusEditViewModel}}, Path=SetSelectedFamilyCommand}"
                                                                  CommandParameter="{Binding .}" />
                                        </Border.GestureRecognizers>

                                        <Grid ColumnDefinitions="*,Auto">
                                            <Label Grid.Column="0"
                                                   Text="{Binding Name}"
                                                   FontSize="14"
                                                   FontAttributes="Bold"
                                                   TextColor="Black"
                                                   VerticalOptions="Center" />

                                            <Label Grid.Column="1"
                                                   Text="✓"
                                                   FontSize="16"
                                                   TextColor="{StaticResource Primary}"
                                                   VerticalOptions="Center" />
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </CollectionView.ItemTemplate>
                        </CollectionView>

                        <!-- Create new family link -->
                        <Button Text="+ Create New Family"
                                Command="{Binding CreateNewFamilyCommand}"
                                FontSize="14"
                                BackgroundColor="Transparent"
                                TextColor="{StaticResource Primary}"
                                HorizontalOptions="Start" />
                    </StackLayout>
                </ContentView>

                <!-- Name Field usando template -->
                <ContentView Style="{StaticResource FormFieldFrameStyle}">
                    <StackLayout Style="{StaticResource FormFieldStackStyle}">
                        <Label Text="Name *" Style="{StaticResource FormFieldLabelStyle}" />

                        <Entry Text="{Binding Name}"
                               Placeholder="Enter genus name"
                               FontSize="16"
                               TextColor="Black"
                               BackgroundColor="Transparent" />

                        <Label Text="{Binding NameValidationMessage}"
                               FontSize="12"
                               TextColor="Red"
                               IsVisible="{Binding IsNameValid, Converter={StaticResource InvertedBoolConverter}}" />
                    </StackLayout>
                </ContentView>

                <!-- Description Field usando template -->
                <ContentView Style="{StaticResource FormFieldFrameStyle}">
                    <StackLayout Style="{StaticResource FormFieldStackStyle}">
                        <Label Text="Description" Style="{StaticResource FormFieldLabelStyle}" />

                        <Editor Text="{Binding Description}"
                                Placeholder="Optional description..."
                                FontSize="16"
                                TextColor="Black"
                                BackgroundColor="Transparent"
                                HeightRequest="80" />
                    </StackLayout>
                </ContentView>

                <!-- Settings usando template -->
                <ContentView Style="{StaticResource FormFieldFrameStyle}">
                    <StackLayout Style="{StaticResource FormSettingsStackStyle}">
                        <Label Text="Settings" Style="{StaticResource FormFieldLabelStyle}" />

                        <!-- Active Toggle -->
                        <Grid ColumnDefinitions="Auto,*,Auto">
                            <Label Grid.Column="0"
                                   Text="🟢"
                                   FontSize="20"
                                   VerticalOptions="Center" />

                            <Label Grid.Column="1"
                                   Text="Active Genus"
                                   FontSize="16"
                                   VerticalOptions="Center"
                                   Margin="10,0,0,0" />

                            <Switch Grid.Column="2"
                                    IsToggled="{Binding IsActive}"
                                    OnColor="{StaticResource Primary}"
                                    ThumbColor="White" />
                        </Grid>

                        <!-- Favorite Toggle -->
                        <Grid ColumnDefinitions="Auto,*,Auto">
                            <Label Grid.Column="0"
                                   Text="⭐"
                                   FontSize="20"
                                   VerticalOptions="Center" />

                            <Label Grid.Column="1"
                                   Text="Mark as Favorite"
                                   FontSize="16"
                                   VerticalOptions="Center"
                                   Margin="10,0,0,0" />

                            <Switch Grid.Column="2"
                                    IsToggled="{Binding IsFavorite}"
                                    OnColor="{StaticResource WarningColor}"
                                    ThumbColor="White" />
                        </Grid>
                    </StackLayout>
                </ContentView>

                <!-- Action Buttons -->
                <StackLayout Spacing="12" Margin="0,10,0,20">
                    <!-- Primary Save Button -->
                    <Button Text="{Binding SaveButtonText}"
                            Command="{Binding SaveWithFamilyCommand}"
                            IsEnabled="{Binding CanSave}"
                            BackgroundColor="{Binding SaveButtonColor}"
                            Style="{StaticResource DynamicPrimaryButtonStyle}" />

                    <!-- Save and Add Another (only for new genus) -->
                    <Button Text="Save and Add Another"
                            Command="{Binding SaveAndCreateAnotherCommand}"
                            IsVisible="{Binding CanCreateAnother}"
                            Style="{StaticResource SecondaryButtonStyle}" />
                </StackLayout>

            </StackLayout>
        </ScrollView>

        <!-- Loading Overlay -->
        <Grid IsVisible="{Binding IsBusy}"
              BackgroundColor="#80000000">
            <Frame BackgroundColor="White"
                   CornerRadius="16"
                   Padding="32"
                   HorizontalOptions="Center"
                   VerticalOptions="Center"
                   HasShadow="True">
                <StackLayout Spacing="16" Orientation="Horizontal">
                    <sfbusy:SfBusyIndicator IsVisible="{Binding IsBusy}"
                                           IsRunning="{Binding IsBusy}"
                                           AnimationType="CircularMaterial"
                                           SizeFactor="0.8"
                                           WidthRequest="50"
                                           HeightRequest="50" />

                    <Label Text="{Binding LoadingMessage}"
                           FontSize="16"
                           VerticalOptions="Center" />
                </StackLayout>
            </Frame>
        </Grid>
    </Grid>

</ContentPage>