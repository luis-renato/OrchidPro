<?xml version="1.0" encoding="utf-8" ?>
<ContentPage x:Class="OrchidPro.Views.Pages.GenusEditPage"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:OrchidPro.ViewModels.Genera"
             xmlns:models="clr-namespace:OrchidPro.Models"
             xmlns:sfbusy="clr-namespace:Syncfusion.Maui.Core;assembly=Syncfusion.Maui.Core"
             xmlns:sfcombobox="clr-namespace:Syncfusion.Maui.Inputs;assembly=Syncfusion.Maui.Inputs"
             x:DataType="vm:GenusEditViewModel"
             Title="{Binding PageTitle}"
             BackgroundColor="White">

    <Grid>
        <!-- Main Content -->
        <ScrollView>
            <StackLayout Padding="16" Spacing="20">

                <!-- Header -->
                <StackLayout Spacing="8">
                    <Label Text="{Binding PageTitle}"
                           FontSize="28"
                           FontAttributes="Bold"
                           TextColor="Black"
                           HorizontalOptions="Start" />

                    <Label Text="Genus Information"
                           FontSize="14" 
                           TextColor="Gray"
                           Opacity="0.8" />

                    <ProgressBar Progress="{Binding FormCompletionProgress}"
                                ProgressColor="{StaticResource Primary}"
                                BackgroundColor="{StaticResource Gray200}"
                                HeightRequest="4"
                                Margin="0,8,0,0" />
                </StackLayout>

                <!-- Family Selection Field -->
                <ContentView Style="{StaticResource FormFieldFrameStyle}">
                    <StackLayout Style="{StaticResource FormFieldStackStyle}">
                        <Grid ColumnDefinitions="*,Auto" ColumnSpacing="8">
                            <Label Grid.Column="0" 
                                   Text="Family *" 
                                   Style="{StaticResource FormFieldLabelStyle}"
                                   VerticalOptions="Center" />
                            <Button Grid.Column="1"
                                    Text="+ Create New Family"
                                    Command="{Binding CreateNewFamilyCommand}"
                                    FontSize="12"
                                    BackgroundColor="Transparent"
                                    TextColor="{StaticResource Primary}"
                                    Padding="6,0"
                                    MaximumHeightRequest="16"
                                    VerticalOptions="Center" />
                        </Grid>

                        <!-- SfComboBox for Family Selection -->
                        <sfcombobox:SfComboBox ItemsSource="{Binding AvailableFamilies}"
                                               DisplayMemberPath="Name"
                                               TextMemberPath="Name"
                                               SelectedItem="{Binding SelectedFamily}"
                                               Placeholder="Select a family..."
                                               PlaceholderColor="Gray"
                                               IsEditable="True"
                                               IsFilteringEnabled="True"
                                               TextSearchMode="Contains"
                                               TextColor="Black"
                                               DropDownItemTextColor="Black"
                                               SelectedDropDownItemBackground="LightGray"
                                               DropDownBackground="White"
                                               MaxDropDownHeight="200"
                                               FontSize="16"
                                               BackgroundColor="Transparent" />

                    </StackLayout>
                </ContentView>

                <!-- Name Field usando template -->
                <ContentView Style="{StaticResource FormFieldFrameStyle}">
                    <StackLayout Style="{StaticResource FormFieldStackStyle}">
                        <Label Text="Name *" Style="{StaticResource FormFieldLabelStyle}" />

                        <Entry Text="{Binding Name}"
                               Placeholder="Enter genus name"
                               FontSize="16"
                               TextColor="Black"
                               BackgroundColor="Transparent" />

                        <Label Text="{Binding NameValidationMessage}"
                               FontSize="12"
                               TextColor="Red"
                               IsVisible="{Binding IsNameValid, Converter={StaticResource InvertedBoolConverter}}" />
                    </StackLayout>
                </ContentView>

                <!-- Description Field usando template -->
                <ContentView Style="{StaticResource FormFieldFrameStyle}">
                    <StackLayout Style="{StaticResource FormFieldStackStyle}">
                        <Label Text="Description" Style="{StaticResource FormFieldLabelStyle}" />

                        <Editor Text="{Binding Description}"
                                Placeholder="Optional description..."
                                FontSize="16"
                                TextColor="Black"
                                BackgroundColor="Transparent"
                                HeightRequest="80" />
                    </StackLayout>
                </ContentView>

                <!-- Settings usando template melhorado como Family -->
                <ContentView Style="{StaticResource FormFieldFrameStyle}">
                    <StackLayout Style="{StaticResource FormSettingsStackStyle}">
                        <Label Text="Settings" Style="{StaticResource FormFieldLabelStyle}" />

                        <!-- Active Toggle -->
                        <Grid ColumnDefinitions="Auto,*,Auto">
                            <Label Grid.Column="0"
                                   Text="🟢"
                                   FontSize="24"
                                   VerticalOptions="Center" />

                            <StackLayout Grid.Column="1" 
                                        Margin="12,0,0,0"
                                        VerticalOptions="Center">
                                <Label Text="Active"
                                       FontSize="16"
                                       FontAttributes="Bold"
                                       TextColor="Black" />
                                <Label Text="Genus is available for use"
                                       FontSize="12"
                                       TextColor="Gray" />
                            </StackLayout>

                            <Switch Grid.Column="2"
                                    IsToggled="{Binding IsActive}"
                                    OnColor="{StaticResource SuccessColor}"
                                    ThumbColor="White"
                                    VerticalOptions="Center" />
                        </Grid>

                        <!-- Favorite Toggle -->
                        <Grid ColumnDefinitions="Auto,*,Auto">
                            <Label Grid.Column="0"
                                   Text="⭐"
                                   FontSize="24"
                                   VerticalOptions="Center" />

                            <StackLayout Grid.Column="1" 
                                        Margin="12,0,0,0"
                                        VerticalOptions="Center">
                                <Label Text="Favorite"
                                       FontSize="16"
                                       FontAttributes="Bold"
                                       TextColor="Black" />
                                <Label Text="Mark as important genus"
                                       FontSize="12"
                                       TextColor="Gray" />
                            </StackLayout>

                            <Switch Grid.Column="2"
                                    IsToggled="{Binding IsFavorite}"
                                    OnColor="{StaticResource WarningColor}"
                                    ThumbColor="White"
                                    VerticalOptions="Center" />
                        </Grid>

                    </StackLayout>
                </ContentView>

                <!-- Action Buttons -->
                <Grid ColumnDefinitions="*,*" 
                      ColumnSpacing="16"
                      Margin="0,24,0,0">

                    <Button Grid.Column="0"
                            Text="Cancel"
                            Style="{StaticResource SecondaryButtonStyle}"
                            Command="{Binding CancelCommand}" />

                    <Button Grid.Column="1"
                            Text="{Binding SaveButtonText}"
                            Style="{StaticResource DynamicPrimaryButtonStyle}"
                            BackgroundColor="{Binding SaveButtonColor}"
                            Command="{Binding SaveWithFamilyCommand}"
                            IsEnabled="{Binding IsNameValid}" />

                </Grid>

                <!-- 🔧 FIX 2: Save and Add Another Button (only for new genus) -->
                <Button Text="Save &amp; Add Another"
                        Command="{Binding SaveAndContinueCommand}"
                        IsVisible="{Binding IsEditMode, Converter={StaticResource InvertedBoolConverter}}"
                        Style="{StaticResource SecondaryButtonStyle}"
                        Margin="0,8,0,0" />

                <!-- 🔧 FIX 2: Delete Button (only for edit mode) -->
                <Button Text="Delete"
                        Command="{Binding DeleteCommand}"
                        IsVisible="{Binding IsEditMode}"
                        Style="{StaticResource SecondaryButtonStyle}"
                        BackgroundColor="{StaticResource ErrorColor}"
                        TextColor="White"
                        Margin="0,8,0,0" />

            </StackLayout>
        </ScrollView>

        <!-- Loading Overlay -->
        <ContentView Style="{StaticResource SavingOverlayStyle}" />

    </Grid>

</ContentPage>