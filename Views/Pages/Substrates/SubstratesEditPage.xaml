<?xml version="1.0" encoding="utf-8" ?>
<ContentPage x:Class="OrchidPro.Views.Pages.Substrates.SubstratesEditPage"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:OrchidPro.ViewModels.Substrates"
             xmlns:sfbusy="clr-namespace:Syncfusion.Maui.Core;assembly=Syncfusion.Maui.Core"
             xmlns:sfcombobox="clr-namespace:Syncfusion.Maui.Inputs;assembly=Syncfusion.Maui.Inputs"
             x:DataType="vm:SubstratesEditViewModel"
             Title="{Binding PageTitle}"
             BackgroundColor="White">

    <Grid>
        <ScrollView>
            <StackLayout Padding="16" Spacing="8">

                <!-- Header -->
                <StackLayout Spacing="8">
                    <Label Text="{Binding PageTitle}"
                           FontSize="28"
                           FontAttributes="Bold"
                           TextColor="Black"
                           HorizontalOptions="Start" />

                    <Label Text="Substrate Information"
                           FontSize="14" 
                           TextColor="Gray"
                           Opacity="0.8" />

                    <ProgressBar Progress="{Binding FormCompletionProgress}"
                                ProgressColor="{StaticResource Primary}"
                                BackgroundColor="{StaticResource Gray200}"
                                HeightRequest="4"
                                Margin="0,8,0,0" />
                </StackLayout>

                <!-- Name Field -->
                <ContentView Style="{StaticResource FormFieldFrameStyle}">
                    <StackLayout Style="{StaticResource FormFieldStackStyle}">
                        <Label Text="{Binding NameLabel, StringFormat='{0} *'}" Style="{StaticResource FormFieldLabelStyle}" />

                        <Entry Text="{Binding Name}"
                               Placeholder="{Binding NamePlaceholder}"
                               FontSize="16"
                               TextColor="Black"
                               BackgroundColor="Transparent"
                               Focused="OnEntryFocused"
                               Unfocused="OnEntryUnfocused" />

                        <Label Text="{Binding NameValidationMessage}"
                               FontSize="12"
                               TextColor="Red"
                               IsVisible="{Binding IsNameValid, Converter={StaticResource InvertedBoolConverter}}" />
                    </StackLayout>
                </ContentView>

                <!-- Components Field -->
                <ContentView Style="{StaticResource FormFieldFrameStyle}">
                    <StackLayout Style="{StaticResource FormFieldStackStyle}">
                        <Label Text="{Binding ComponentsLabel}" Style="{StaticResource FormFieldLabelStyle}" />

                        <Editor Text="{Binding Components}"
                                Placeholder="{Binding ComponentsPlaceholder}"
                                FontSize="16"
                                TextColor="Black"
                                BackgroundColor="Transparent"
                                HeightRequest="80"
                                TextChanged="OnEditorTextChanged" />
                    </StackLayout>
                </ContentView>

                <!-- pH Range Field -->
                <ContentView Style="{StaticResource FormFieldFrameStyle}">
                    <StackLayout Style="{StaticResource FormFieldStackStyle}">
                        <Label Text="{Binding PhRangeLabel}" Style="{StaticResource FormFieldLabelStyle}" />

                        <sfcombobox:SfComboBox ItemsSource="{Binding AvailablePhRanges}"
                                               SelectedItem="{Binding PhRange}"
                                               Placeholder="{Binding PhRangePlaceholder}"
                                               PlaceholderColor="Gray"
                                               IsEditable="False"
                                               TextColor="Black"
                                               DropDownItemTextColor="Black"
                                               SelectedDropDownItemBackground="LightGray"
                                               DropDownBackground="White"
                                               MaxDropDownHeight="200"
                                               FontSize="16"
                                               BackgroundColor="Transparent"
                                               SelectionChanged="OnPickerSelectionChanged" />
                    </StackLayout>
                </ContentView>

                <!-- Drainage Level Field -->
                <ContentView Style="{StaticResource FormFieldFrameStyle}">
                    <StackLayout Style="{StaticResource FormFieldStackStyle}">
                        <Label Text="{Binding DrainageLevelLabel}" Style="{StaticResource FormFieldLabelStyle}" />

                        <sfcombobox:SfComboBox ItemsSource="{Binding AvailableDrainageLevels}"
                                               SelectedItem="{Binding DrainageLevel}"
                                               Placeholder="{Binding DrainageLevelPlaceholder}"
                                               PlaceholderColor="Gray"
                                               IsEditable="False"
                                               TextColor="Black"
                                               DropDownItemTextColor="Black"
                                               SelectedDropDownItemBackground="LightGray"
                                               DropDownBackground="White"
                                               MaxDropDownHeight="200"
                                               FontSize="16"
                                               BackgroundColor="Transparent"
                                               SelectionChanged="OnPickerSelectionChanged" />
                    </StackLayout>
                </ContentView>

                <!-- Supplier Field -->
                <ContentView Style="{StaticResource FormFieldFrameStyle}">
                    <StackLayout Style="{StaticResource FormFieldStackStyle}">
                        <Label Text="{Binding SupplierLabel}" Style="{StaticResource FormFieldLabelStyle}" />

                        <Entry Text="{Binding Supplier}"
                               Placeholder="{Binding SupplierPlaceholder}"
                               FontSize="16"
                               TextColor="Black"
                               BackgroundColor="Transparent"
                               Focused="OnEntryFocused"
                               Unfocused="OnEntryUnfocused" />
                    </StackLayout>
                </ContentView>

                <!-- Description Field -->
                <ContentView Style="{StaticResource FormFieldFrameStyle}">
                    <StackLayout Style="{StaticResource FormFieldStackStyle}">
                        <Label Text="{Binding DescriptionLabel}" Style="{StaticResource FormFieldLabelStyle}" />

                        <Editor Text="{Binding Description}"
                                Placeholder="{Binding DescriptionPlaceholder}"
                                FontSize="16"
                                TextColor="Black"
                                BackgroundColor="Transparent"
                                HeightRequest="80"
                                TextChanged="OnEditorTextChanged" />
                    </StackLayout>
                </ContentView>

                <!-- Configuration Section -->
                <Label Text="Configuration" 
                       FontSize="18" 
                       FontAttributes="Bold" 
                       TextColor="{StaticResource Primary}" 
                       Margin="0,16,0,8" />

                <!-- Settings -->
                <ContentView Style="{StaticResource FormFieldFrameStyle}">
                    <StackLayout Style="{StaticResource FormSettingsStackStyle}">
                        <Label Text="Settings" Style="{StaticResource FormFieldLabelStyle}" />

                        <!-- Active Toggle -->
                        <Grid ColumnDefinitions="Auto,*,Auto">
                            <Label Grid.Column="0"
                                   Text="🟢"
                                   FontSize="24"
                                   VerticalOptions="Center" />

                            <StackLayout Grid.Column="1" 
                                        Margin="12,0,0,0"
                                        VerticalOptions="Center">
                                <Label Text="Active"
                                       FontSize="16"
                                       FontAttributes="Bold"
                                       TextColor="Black" />
                                <Label Text="Substrate is available for use"
                                       FontSize="12"
                                       TextColor="Gray" />
                            </StackLayout>

                            <Switch Grid.Column="2"
                                    IsToggled="{Binding IsActive}"
                                    OnColor="{StaticResource SuccessColor}"
                                    ThumbColor="White"
                                    VerticalOptions="Center"
                                    Toggled="OnSwitchToggled" />
                        </Grid>

                        <!-- Favorite Toggle -->
                        <Grid ColumnDefinitions="Auto,*,Auto">
                            <Label Grid.Column="0"
                                   Text="⭐"
                                   FontSize="24"
                                   VerticalOptions="Center" />

                            <StackLayout Grid.Column="1" 
                                        Margin="12,0,0,0"
                                        VerticalOptions="Center">
                                <Label Text="Favorite"
                                       FontSize="16"
                                       FontAttributes="Bold"
                                       TextColor="Black" />
                                <Label Text="Mark as preferred substrate"
                                       FontSize="12"
                                       TextColor="Gray" />
                            </StackLayout>

                            <Switch Grid.Column="2"
                                    IsToggled="{Binding IsFavorite}"
                                    OnColor="{StaticResource WarningColor}"
                                    ThumbColor="White"
                                    VerticalOptions="Center"
                                    Toggled="OnSwitchToggled" />
                        </Grid>

                    </StackLayout>
                </ContentView>

                <!-- Action Buttons -->
                <Grid ColumnDefinitions="*,*" 
                      ColumnSpacing="16"
                      Margin="0,10,0,10">

                    <Button Grid.Column="0"
                            Text="{Binding CancelButtonText}"
                            Style="{StaticResource CancelButtonStyle}"
                            Clicked="OnCancelButtonTapped" />

                    <Button Grid.Column="1"
                            Text="{Binding SaveButtonText}"
                            Style="{StaticResource DynamicPrimaryButtonStyle}"
                            IsEnabled="{Binding CanSave}"
                            Clicked="OnSaveButtonTapped" />

                </Grid>

                <!-- DEBUG Button -->
                <Button Text="DEBUG LOCALIZAÇÃO" 
                        Command="{Binding DebugLocalizationCommand}"
                        BackgroundColor="Red" 
                        TextColor="White" />

                <!-- Save and Add Another Button -->
                <Button Text="{Binding SaveAndContinueButtonText}"
                        IsVisible="{Binding ShowSaveAndContinue}"
                        Style="{StaticResource DynamicPrimaryButtonStyle}"
                        IsEnabled="{Binding CanSave}"
                        Margin="0,0,0,0"
                        Clicked="OnSaveAndContinueButtonTapped" />

                <!-- Delete Button -->
                <Button Text="{Binding DeleteButtonText}"
                        IsVisible="{Binding IsEditMode}"
                        IsEnabled="{Binding CanDelete}"
                        Style="{StaticResource ErrorButtonStyle}"
                        Margin="0,0,0,0"
                        Clicked="OnDeleteButtonTapped" />

            </StackLayout>
        </ScrollView>

        <!-- Loading Overlay -->
        <ContentView Style="{StaticResource SavingOverlayStyle}" />

    </Grid>

</ContentPage>