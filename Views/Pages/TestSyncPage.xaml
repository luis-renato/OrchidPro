<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="OrchidPro.Views.Pages.TestSyncPage"
             Title="Architecture Debug Console"
             BackgroundColor="{StaticResource Primary}">

    <Grid RowDefinitions="Auto,*">

        <!-- Enhanced header for simplified architecture -->
        <VerticalStackLayout Grid.Row="0" 
                             Padding="20"
                             Spacing="15"
                             BackgroundColor="{StaticResource Secondary}">

            <Label Text="ðŸ§ª Simplified Architecture Console"
                   FontSize="20"
                   FontAttributes="Bold"
                   TextColor="{StaticResource PrimaryDarkText}"
                   HorizontalOptions="Center" />

            <Label Text="Direct Supabase with Intelligent Cache"
                   FontSize="12"
                   TextColor="{StaticResource Gray600}"
                   HorizontalOptions="Center" />

            <!-- Status indicators -->
            <Grid ColumnDefinitions="*,*,*" 
                  ColumnSpacing="10"
                  Margin="0,10,0,0">

                <Border Grid.Column="0" 
                        BackgroundColor="{StaticResource SuccessColor}"
                        Padding="8,4">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="12" />
                    </Border.StrokeShape>
                    <Label Text="âœ… SIMPLIFIED"
                           FontSize="10"
                           FontAttributes="Bold"
                           TextColor="White"
                           HorizontalOptions="Center" />
                </Border>

                <Border Grid.Column="1" 
                        BackgroundColor="{StaticResource InfoColor}"
                        Padding="8,4">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="12" />
                    </Border.StrokeShape>
                    <Label Text="ðŸš€ DIRECT SUPABASE"
                           FontSize="10"
                           FontAttributes="Bold"
                           TextColor="White"
                           HorizontalOptions="Center" />
                </Border>

                <Border Grid.Column="2" 
                        BackgroundColor="{StaticResource Primary}"
                        Padding="8,4">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="12" />
                    </Border.StrokeShape>
                    <Label Text="ðŸ’¾ SMART CACHE"
                           FontSize="10"
                           FontAttributes="Bold"
                           TextColor="White"
                           HorizontalOptions="Center" />
                </Border>
            </Grid>

            <!-- Updated test buttons for simplified architecture -->
            <Grid ColumnDefinitions="*,*" 
                  RowDefinitions="Auto,Auto,Auto,Auto"
                  ColumnSpacing="12"
                  RowSpacing="12"
                  Margin="0,15,0,0">

                <!-- Row 1: Core tests -->
                <Button Grid.Row="0" Grid.Column="0"
                        Text="ðŸ” Test Connection"
                        Clicked="OnTestSupabaseClicked"
                        BackgroundColor="{StaticResource Primary}"
                        TextColor="White"
                        FontSize="12"
                        HeightRequest="45" />

                <Button Grid.Row="0" Grid.Column="1"
                        Text="ðŸ“Š Analyze Families"
                        Clicked="OnTestFamiliesClicked"
                        BackgroundColor="{StaticResource Tertiary}"
                        TextColor="White"
                        FontSize="12"
                        HeightRequest="45" />

                <!-- Row 2: CRUD operations -->
                <Button Grid.Row="1" Grid.Column="0"
                        Text="âž• Create Test Family"
                        Clicked="OnCreateTestFamilyClicked"
                        BackgroundColor="{StaticResource SuccessColor}"
                        TextColor="White"
                        FontSize="12"
                        HeightRequest="45" />

                <Button Grid.Row="1" Grid.Column="1"
                        Text="ðŸ”„ Force Cache Refresh"
                        Clicked="OnForceFullSyncClicked"
                        BackgroundColor="{StaticResource InfoColor}"
                        TextColor="White"
                        FontSize="12"
                        HeightRequest="45" />

                <!-- Row 3: Performance and debugging -->
                <Button Grid.Row="2" Grid.Column="0"
                        Text="âš¡ Performance Test"
                        Clicked="OnPerformanceTestClicked"
                        BackgroundColor="#9C27B0"
                        TextColor="White"
                        FontSize="12"
                        HeightRequest="45" />

                <Button Grid.Row="2" Grid.Column="1"
                        Text="ðŸ“‹ Export Debug Info"
                        Clicked="OnExportDebugInfoClicked"
                        BackgroundColor="{StaticResource Gray500}"
                        TextColor="White"
                        FontSize="12"
                        HeightRequest="45" />

                <!-- Row 4: Utility -->
                <Button Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2"
                        Text="ðŸ—‘ï¸ Clear Log"
                        Clicked="OnClearLogClicked"
                        BackgroundColor="{StaticResource Gray400}"
                        TextColor="White"
                        FontSize="12"
                        HeightRequest="40" />

            </Grid>

            <!-- Quick stats display -->
            <Border BackgroundColor="{StaticResource Surface}"
                    Stroke="{StaticResource BorderColor}"
                    StrokeThickness="1"
                    Padding="12,8"
                    Margin="0,10,0,0">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="8" />
                </Border.StrokeShape>

                <Grid ColumnDefinitions="*,*,*,*" ColumnSpacing="5">
                    <VerticalStackLayout Grid.Column="0" Spacing="2">
                        <Label x:Name="LocalCountLabel"
                               Text="--"
                               FontSize="14"
                               FontAttributes="Bold"
                               TextColor="{StaticResource Primary}"
                               HorizontalOptions="Center" />
                        <Label Text="Total"
                               FontSize="9"
                               TextColor="{StaticResource Gray600}"
                               HorizontalOptions="Center" />
                    </VerticalStackLayout>

                    <VerticalStackLayout Grid.Column="1" Spacing="2">
                        <Label x:Name="ServerCountLabel"
                               Text="--"
                               FontSize="14"
                               FontAttributes="Bold"
                               TextColor="{StaticResource InfoColor}"
                               HorizontalOptions="Center" />
                        <Label Text="Server"
                               FontSize="9"
                               TextColor="{StaticResource Gray600}"
                               HorizontalOptions="Center" />
                    </VerticalStackLayout>

                    <VerticalStackLayout Grid.Column="2" Spacing="2">
                        <Label x:Name="SyncedCountLabel"
                               Text="--"
                               FontSize="14"
                               FontAttributes="Bold"
                               TextColor="{StaticResource SuccessColor}"
                               HorizontalOptions="Center" />
                        <Label Text="Synced"
                               FontSize="9"
                               TextColor="{StaticResource Gray600}"
                               HorizontalOptions="Center" />
                    </VerticalStackLayout>

                    <VerticalStackLayout Grid.Column="3" Spacing="2">
                        <Label x:Name="DuplicatesLabel"
                               Text="--"
                               FontSize="14"
                               FontAttributes="Bold"
                               TextColor="{StaticResource SuccessColor}"
                               HorizontalOptions="Center" />
                        <Label Text="Cache"
                               FontSize="9"
                               TextColor="{StaticResource Gray600}"
                               HorizontalOptions="Center" />
                    </VerticalStackLayout>
                </Grid>
            </Border>

        </VerticalStackLayout>

        <!-- Enhanced log output area -->
        <Border Grid.Row="1"
                BackgroundColor="{StaticResource Surface}"
                Stroke="{StaticResource BorderColor}"
                StrokeThickness="1"
                Margin="10"
                Padding="0">
            <Border.StrokeShape>
                <RoundRectangle CornerRadius="12" />
            </Border.StrokeShape>

            <Grid RowDefinitions="Auto,*,Auto">
                <!-- Log header -->
                <Border Grid.Row="0"
                        BackgroundColor="{StaticResource Gray900}"
                        Padding="15,10">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="12,12,0,0" />
                    </Border.StrokeShape>

                    <Grid ColumnDefinitions="*,Auto">
                        <Label Grid.Column="0"
                               Text="ðŸ“ Simplified Architecture Debug Log"
                               FontSize="14"
                               FontAttributes="Bold"
                               TextColor="White"
                               VerticalOptions="Center" />

                        <Button Grid.Column="1"
                                Text="ðŸ“„ Copy"
                                Clicked="OnCopyLogClicked"
                                BackgroundColor="Transparent"
                                TextColor="White"
                                FontSize="12"
                                Padding="8,4"
                                BorderColor="White"
                                BorderWidth="1"
                                CornerRadius="4"
                                HeightRequest="30" />
                    </Grid>
                </Border>

                <!-- Scrollable log content -->
                <ScrollView Grid.Row="1" x:Name="LogScrollView">
                    <Label x:Name="StatusLabel"
                           Text="ðŸš€ SIMPLIFIED ARCHITECTURE - Ready for testing...\nâœ… Direct Supabase with intelligent cache\nðŸ’¡ Click 'Test Connection' to start analysis\n"
                           FontFamily="Courier New, Consolas, Monaco, monospace"
                           FontSize="11"
                           TextColor="{StaticResource OnSurface}"
                           Padding="15"
                           VerticalOptions="Start"
                           LineBreakMode="WordWrap" />
                </ScrollView>

                <!-- Log footer with auto-scroll control -->
                <Border Grid.Row="2"
                        BackgroundColor="{StaticResource Gray100}"
                        Padding="10,6">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="0,0,12,12" />
                    </Border.StrokeShape>

                    <Grid ColumnDefinitions="Auto,*,Auto">
                        <Label Grid.Column="0"
                               x:Name="LogStatusLabel"
                               Text="Ready"
                               FontSize="10"
                               TextColor="{StaticResource Gray600}"
                               VerticalOptions="Center" />

                        <CheckBox Grid.Column="2"
                                  x:Name="AutoScrollCheckBox"
                                  IsChecked="True"
                                  Color="{StaticResource Primary}"
                                  Scale="0.8" />

                        <Label Grid.Column="2"
                               Text="Auto-scroll"
                               FontSize="10"
                               TextColor="{StaticResource Gray600}"
                               VerticalOptions="Center"
                               Margin="25,0,0,0" />
                    </Grid>
                </Border>
            </Grid>
        </Border>

    </Grid>
</ContentPage>